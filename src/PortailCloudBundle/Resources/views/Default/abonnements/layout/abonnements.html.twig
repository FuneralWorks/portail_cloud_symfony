{% extends "::base.html.twig" %}



{% block breadcumb %}
    <li class="breadcrumb-item active"><a href="{{ path('abonnements') }}">Abonnements</a></li>
{% endblock breadcumb %}

{% block body %}
<div class="animated fadeIn">
    <div class="row">

        <div class="col-lg-12">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button"><i class="fa fa-search"></i> Search</button>
                </span>
                <input class="form-control" id="input1-group2" name="input1-group2" placeholder="Username" type="text">
            </div>
            <div class="card">
                <div class="card-header">
                    Abonnements
                </div>
                <div class="card-block">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom Abonnement</th>
                                <th>Date de subscription</th>
                                <th>Role</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for i in 0..10 %}
                            <tr>
                                <td><a class="nav-link" href="{{ path('produits', { 'abonnementId' : i }) }}">Abonnement {{ i }}</a></td>
                                <td>2012/01/01</td>
                                <td>Member</td>
                                <td>
                                    <span class="tag tag-success">Active</span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock body %}